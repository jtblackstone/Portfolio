<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>Lab 15</title>
	<meta http-equiv="content-type" 
		content="text/html;charset=utf-8" />
<script language="javascript">
function validate(){
	var ccnumber = document.cc.number.value;
	if(/^5[1-5][0-9]{14}$/.test(ccnumber))
	{
		alert("Valid MasterCard");
	}
	else if(/^4[0-9]{12}(?:[0-9]{3})?$/.test(ccnumber))
	{
		alert("Valid Visa");
	}
	else if(/^3[47][0-9]{13}$/.test(ccnumber))
		alert("Valid American Express");
	else
	{
		alert("Invalid Card");
	}
	
	//Keep number in form
	return false
}
</script>
</head>
<body>
<form name="cc" onsubmit="return validate()" method="post">
CC Number: <input type="text" name="number"><br>
<input type="submit" value="Validate">
</form>
</body>
</html>
